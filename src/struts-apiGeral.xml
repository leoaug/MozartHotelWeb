<struts>

 <package name="apiGeral" extends="struts-default" namespace="/app/sistema" >
	
		<!-- Dados do API- Geral -->
	
	    <action name="pesquisarApiGeral" class="com.mozart.web.actions.apiGeral.ApiGeralAction" >
                 
                 <result name="sucesso">/pages/modulo/apiGeral/pesquisar.jsp</result>
                 
	    </action>
        
        <action name="manterApiGeral" class="com.mozart.web.actions.apiGeral.ApiGeralAction" >
                 
                 <result name="sucesso">/pages/modulo/apiGeral/manter.jsp</result>
                 <result name="pesquisa" type="redirectAction">
                 	<param name="namespace">/app</param>
                 	<param name="actionName">main!preparar.action</param>
                 </result>
	    </action>

        <action name="relatorio" class="com.mozart.web.actions.apiGeral.ApiGeralAction" >
                 
                 <result name="sucesso">/pages/modulo/apiGeral/relatorio.jsp</result>
                 
	    </action>

	

    </package>
</struts>